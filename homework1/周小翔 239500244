#include <iostream>
using namespace std;

int main() {
    int num1, num2;
    int operation;

    // 提示用户输入两个整数
    cout << "请输入第一个整数: ";
    cin >> num1;
    cout << "请输入第二个整数: ";
    cin >> num2;

    // 提示用户选择操作
    cout << "请选择操作 (1 表示加法, 2 表示减法): ";
    cin >> operation;

    // 根据用户的选择执行相应的操作
    if (operation == 1) {
        int result = num1 + num2;
        cout << "结果: " << num1 << " + " << num2 << " = " << result << endl;
    } else if (operation == 2) {
        int result = num1 - num2;
        cout << "结果: " << num1 << " - " << num2 << " = " << result << endl;
    } else {
        cout << "无效的操作选择，请输入 1 或 2。" << endl;
    }

    return 0;
}

请输入第一个整数: 10
请输入第二个整数: 5
请选择操作 (1 表示加法, 2 表示减法): 1
结果: 10 + 5 = 15（截图粘不上去）










#include <iostream>
using namespace std;

int main() {
    int number;

    // 提示用户输入一个整数
    cout << "请输入一个整数: ";
    cin >> number;

    // 使用 if-else 语句判断这个数是奇数还是偶数
    if (number % 2 == 0) {
        cout << number << " 是偶数。" << endl;
    } else {
        cout << number << " 是奇数。" << endl;
    }

    return 0;
}

请输入一个整数: 10
10 是偶数。




#include <iostream>
#include <cstdlib>  // 包含 rand() 和 srand() 函数
#include <ctime>    // 包含 time() 函数

using namespace std;

int main() {
    // 使用当前时间作为随机数种子
    srand(static_cast<unsigned int>(time(0)));

    // 生成一个 1 到 10 之间的随机数
    int secretNumber = rand() % 10 + 1;

    int guess;
    int attempts = 0;

    cout << "欢迎来到猜数字游戏！" << endl;
    cout << "我已经想好了一个 1 到 10 之间的数字，猜猜看是多少吧！" << endl;

    // 使用 while 循环让用户多次猜测
    while (true) {
        cout << "请输入你的猜测: ";
        cin >> guess;
        attempts++;

        // 判断用户猜测的数字
        if (guess < secretNumber) {
            cout << "猜小了！再试试。" << endl;
        } else if (guess > secretNumber) {
            cout << "猜大了！再试试。" << endl;
        } else {
            cout << "恭喜你，猜对了！" << endl;
            cout << "你一共猜了 " << attempts << " 次。" << endl;
            break;  // 猜对了，退出循环
        }
    }

    return 0;
}


欢迎来到猜数字游戏！
我已经想好了一个 1 到 10 之间的数字，猜猜看是多少吧！
请输入你的猜测: 5
猜小了！再试试。
请输入你的猜测: 8
猜大了！再试试。
请输入你的猜测: 7
恭喜你，猜对了！
你一共猜了 3 次。
